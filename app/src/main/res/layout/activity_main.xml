<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/current_family_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="family"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:paddingRight="16dp"
            android:text="Logout"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/panel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="设备控制业务包(Device Control)"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/mall"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="商城业务包(Mall)"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/scene"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="场景业务包"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/ipc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="ipc 业务包"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/cloud_storage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="云存储购买 业务包"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/activator"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="配网业务包"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="消息中心(Message Center)"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="常见问题与反馈(FAQ)"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/ota"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="OTA(Firmware Upgrade)"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/family"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="家庭管理(House Management)"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/device_detail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Device Detail 业务包(Device Detail)"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="地图定位"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/groupmanager"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="群组"
                android:textColor="@color/black" />
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>