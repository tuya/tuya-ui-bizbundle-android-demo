<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/thing_theme_color_b6"
    android:minHeight="@dimen/thing_dp_48"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/thing_dp_15"
        android:layout_marginLeft="@dimen/thing_dp_15"
        android:layout_toLeftOf="@+id/menu_list_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menu_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/thing_theme_color_b6_n1"
            android:textSize="@dimen/thing_dp_16" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu_list_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/thing_dp_5"
        android:layout_marginLeft="@dimen/thing_dp_5"
        android:layout_marginEnd="@dimen/thing_dp_15"
        android:layout_marginRight="@dimen/thing_dp_15"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/iv_red_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/thing_dp_5"
            android:src="@drawable/baselist_global_reddot"
            android:visibility="gone" />

        <TextView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/thing_dp_6"
            android:layout_marginRight="@dimen/thing_dp_6"
            android:drawableRight="@drawable/arrow_more"
            android:ellipsize="end"
            android:gravity="right"
            android:maxEms="12"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/thing_theme_color_b6_n3"
            android:textSize="@dimen/thing_dp_14"
            app:drawableTint="@color/thing_theme_color_b6_n6"
            app:drawableTintMode="src_in" />
    </LinearLayout>
</RelativeLayout>